using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Задайте размер массива: ");
            int size = Int32.Parse(Console.ReadLine());
            double[] vector = new double[size];
            Console.WriteLine("Введите исходный массив");
            double vectorSum = 0; // для суммирования 
            for (int i = 0; i < vector.Length; i++)
            {
                vector[i] = Double.Parse(Console.ReadLine());
            }
            Console.WriteLine("\n Исходный массив: ");
            for (int i = 0; i < vector.Length; i++)
            {
                Console.Write("{0} ", vector[i]);
            }
            for (int i = 0; i < vector.Length; i++)
            {
                vectorSum += vector[i];
            }
            double average = vectorSum / vector.Length;
            Console.WriteLine("\n\n Сума значень = {0} ", vectorSum);
            Console.WriteLine("\n\n Среднее значение = {0} ", average);



        }
    }
}
